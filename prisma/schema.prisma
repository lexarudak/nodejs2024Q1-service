generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) @unique
  login String
  password String
  version Int @default(1)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt @db.Timestamp(6)
}

model Artist {
  id      String   @id @default(uuid()) @unique
  name    String
  grammy  Boolean
  tracks  Track[]
  albums  Album[]

  favs      Boolean?
}

model Album {
  id        String   @id @default(uuid()) @unique
  name      String
  year      Int

  artistId  String?
  artist    Artist?  @relation(fields: [artistId], references: [id])

  tracks    Track[]

  favs      Boolean?
}

model Track {
  id        String   @id @default(uuid()) @unique
  name      String
  duration  Int

  artistId  String?
  artist    Artist?  @relation(fields: [artistId], references: [id])

  albumId   String?
  album     Album?   @relation(fields: [albumId], references: [id])

  favs      Boolean?
}

